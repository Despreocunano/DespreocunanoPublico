---
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import StatsShowcase from '../components/StatsShowcase.astro';
import PricingCTA from '../components/PricingCTA.astro';
import HowItWorks from '../components/HowItWorks.astro';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lovio - Gestión de tu boda</title>
    <meta name="description" content="Desde la invitación digital hasta la organización de mesas, RSVP, música y mucho más. Todo para que tu boda sea perfecta.">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.svg" />
</head>
<body class="bg-gray-50">
    <Header />
    
    <main class="pt-20">
        <Hero />
        <StatsShowcase />
        <PricingCTA />
        <HowItWorks />
        <Features />
    </main>

    <Footer />
</body>
</html>
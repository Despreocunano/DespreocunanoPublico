---
// Componente Features
import { 
    Smartphone, 
    Music, 
    Clock, 
    MapPin, 
    Music4, 
    Gift, 
    Calendar, 
    Camera, 
    CheckCircle,
    Bell,
    Crown,
    Sparkles 
} from 'lucide-astro';

const features = [
    {
        icon: Smartphone,
        title: "Envío ilimitado",
        description: "A través de WhatsApp, Correo Electrónico, Redes Sociales y cualquier plataforma digital"
    },
    {
        icon: Music,
        title: "Música de fondo",
        description: "El tema musical que desees sonará de fondo en tu invitación"
    },
    {
        icon: Clock,
        title: "Cuenta Regresiva",
        description: "Emocionante cuenta regresiva en tiempo real directo a la fecha de tu evento"
    },
    {
        icon: MapPin,
        title: "Ubicación e Indicaciones",
        description: "Mapa interactivo con la ubicación del evento, tus invitados llegarán sin complicaciones"
    },
    {
        icon: Music4,
        title: "Lista de canciones",
        description: "Tus invitados podrán crear la lista de canciones que no pueden faltar en tu fiesta"
    },
    {
        icon: Gift,
        title: "Regalos",
        description: "Tus invitados tendrán la posibilidad de hacerte llegar sus regalos"
    },
    {
        icon: Calendar,
        title: "Agenda",
        description: "Tus invitados podrán agendar tu evento con un solo clic en sus agendas"
    },
    {
        icon: Camera,
        title: "Álbum de fotos",
        description: "Una historia única en un hermoso recorrido fotográfico"
    },
    {
        icon: CheckCircle,
        title: "Lista de asistentes (RSVP)",
        description: "Tus invitados podrán confirmar su presencia para ayudarte en la lista de invitados final"
    },
    {
        icon: Bell,
        title: "Recordatorios",
        description: "Programa avisos automáticos para que nadie se olvide del gran día"
    },
    {
        icon: Crown,
        title: "Acceso VIP",
        description: "Secciones exclusivas para familiares y amigos cercanos"
    },
    {
        icon: Sparkles,
        title: "¡Mucho más!",
        description: "Suma encuestas, galería colaborativa, códigos QR, y otras sorpresas"
    }
];
---

<section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-5">
        <div class="text-center mb-16">
            <h2 class="font-serif text-5xl text-gray-900 mb-4">Mucho más que una invitación</h2>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">Accede a todas las funcionalidades que tenemos para que tu boda sin restricciones.</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {features.map((feature) => {
                const IconComponent = feature.icon;
                return (
                    <div class="relative rounded-3xl border border-rose-200 bg-rose-50 p-8 shadow-sm hover:shadow-md transition">
                        <div class="absolute -top-4 left-6 bg-white ring-1 ring-rose-200 rounded-full p-3 shadow">
                            <IconComponent size="28" class="text-lovio-500" />
                        </div>
                        <h3 class="mt-4 font-serif text-2xl text-gray-900 mb-3">{feature.title}</h3>
                        <p class="text-gray-700 leading-relaxed">{feature.description}</p>
                    </div>
                );
            })}
        </div>
    </div>
</section>
